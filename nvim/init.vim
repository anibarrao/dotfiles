" Set a different leader key
let mapleader = " "

" Enable configuration per files
filetype plugin indent on

" Enable utf-8 encoding
set encoding=UTF-8

" Plugin installation


" Set numbers in lines
set number relativenumber 

" Autoidentation
set autoindent

" Screw the arrowkeys, this is vim
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

" use jj and kk as shorcut to enter in normal mode
imap jj <Esc>
imap kk <Esc>
